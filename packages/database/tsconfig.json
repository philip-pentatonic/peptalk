{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["@cloudflare/workers-types"],
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "@peptalk/schemas": ["../schemas/dist"]
    }
  },
  "references": [
    { "path": "../schemas" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
