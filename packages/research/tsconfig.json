{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    // Temporarily relax strict settings to get pipeline running
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "@peptalk/schemas": ["../schemas/dist"],
      "@peptalk/database": ["../database/dist"]
    }
  },
  "references": [
    { "path": "../schemas" },
    { "path": "../database" }
  ],
  "include": ["ingest/**/*", "synthesis/**/*", "compliance/**/*", "rubric/**/*", "publisher/**/*", "cli/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
