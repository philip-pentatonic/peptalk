{
  "name": "@peptalk/payments",
  "version": "0.1.0",
  "description": "Stripe payment integration for PepTalk subscriptions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./stripe": {
      "types": "./dist/stripe.d.ts",
      "import": "./dist/stripe.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@peptalk/schemas": "workspace:*",
    "@peptalk/database": "workspace:*",
    "stripe": "^14.14.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
