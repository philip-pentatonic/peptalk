{
  "name": "peptalk-workers",
  "version": "0.1.0",
  "description": "PepTalk Cloudflare Workers API",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
