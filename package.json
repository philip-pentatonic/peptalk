{
  "name": "peptalk",
  "version": "0.1.0",
  "private": true,
  "description": "Citation-first peptide evidence reference platform",
  "author": "PepTalk Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "test:unit": "vitest run packages/",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "cli": "tsx packages/research/cli/run-single.ts",
    "discover": "tsx scripts/discover-peptides.ts",
    "batch:seeds": "tsx scripts/batch-process-seeds.ts",
    "batch:seeds:all": "tsx scripts/batch-process-seeds.ts --all-priorities"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "csv-parse": "^6.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
